<beans xmlns="http://www.springframework.org/schema/beans" xmlns:context="http://www.springframework.org/schema/context"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:component-scan base-package="com.temenos.interaction.springdsl" />
	
	<bean id="resourceMap"  class="org.springframework.beans.factory.config.PropertiesFactoryBean">
		<property name="properties">
			<props>
				<prop key="SimpleModel_Home_home">GET,PUT /test</prop>
			</props>
		</property>
	</bean>

	<bean id="LoadingStrategyDefault"
		  class="com.temenos.interaction.core.loader.impl.SpringResourceStateLoadingStrategy"/>

	<bean id="CacheDefault" class="com.temenos.interaction.core.loader.impl.CacheConcurrentImpl"/>

	<bean id="resourceStateProvider" class="com.temenos.interaction.springdsl.SpringDSLResourceStateProvider">
		<property name="resourceMap" ref="resourceMap" />		
	</bean>

	<bean id="springDSLResourceStateProvider"
		  class="com.temenos.interaction.springdsl.EagerSpringDSLResourceStateProvider">
		<constructor-arg name="antStylePattern" index="0" type="java.lang.String"
						 value="classpath*:/**/IRIS-*-PRD.xml"/>
		<constructor-arg name="loadingStrategy" index="1"
						 type="com.temenos.interaction.core.loader.ResourceStateLoadingStrategy"
						 ref="LoadingStrategyDefault"/>
		<constructor-arg name="cache" index="2" type="com.temenos.interaction.core.loader.Cache" ref="CacheDefault"/>
		<constructor-arg name="beanMap" index="3" type="java.util.Properties" ref="resourceMap"/>
	</bean>

</beans>